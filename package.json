{
  "name": "Retro",
  "private": true,
  "version": "1.0.0",
  "description": "Retrospective rewrite experiment 4",
  "main": "index.js",
  "scripts": {
    "postinstall": "node build/postinstall.js",
    "watchify": "watchify src/index.js -v -t babelify -o dist/js/bundle.js",
    "live-server": "live-server --port=3004 --ignore=node_modules,src",
    "lint": "xo --ignore=build/** --ignore=.git",
    "build": "babel src --out-file dist/js/bundle.js",
    "build:watch": "npm run build -- --watch",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.6.5",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "chai": "^3.5.0",
    "cp-file": "^3.1.0",
    "eslint": "^2.4.0",
    "eslint-config-xo": "^0.12.0",
    "eslint-config-xo-react": "^0.5.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-no-use-extend-native": "^0.3.4",
    "eslint-plugin-react": "^4.2.1",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "jsdom": "^8.1.0",
    "live-server": "^0.9.2",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^0.14.7",
    "rimraf-then": "^1.0.0",
    "watchify": "^3.7.0",
    "xo": "^0.13.0"
  },
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "xo": {
    "globals": [
      "React",
      "window",
      "it",
      "should",
      "describe",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ],
    "esnext": true,
    "rules": {
      "babel/object-shorthand": [
        0
      ],
      "no-unused-vars": [
        0
      ]
    },
    "envs": {
      "browser": true,
      "node": true,
      "mocha": true
    }
  }
}
